{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "WeatherAPI.com Response Schema",
  "description": "JSON schema for WeatherAPI.com API responses",
  "type": "object",
  "required": ["location"],
  "properties": {
    "location": {
      "type": "object",
      "description": "Location information",
      "required": ["name", "region", "country", "lat", "lon", "tz_id", "localtime_epoch", "localtime"],
      "properties": {
        "name": {
          "type": "string",
          "description": "Location name"
        },
        "region": {
          "type": "string",
          "description": "Region or state of the location"
        },
        "country": {
          "type": "string",
          "description": "Country of the location"
        },
        "lat": {
          "type": "number",
          "description": "Latitude in decimal degrees"
        },
        "lon": {
          "type": "number",
          "description": "Longitude in decimal degrees"
        },
        "tz_id": {
          "type": "string",
          "description": "Time zone identifier (e.g., 'America/New_York')"
        },
        "localtime_epoch": {
          "type": "integer",
          "description": "Local time as epoch (Unix timestamp)"
        },
        "localtime": {
          "type": "string",
          "description": "Local date and time"
        }
      }
    },
    "current": {
      "type": "object",
      "description": "Current weather conditions",
      "required": ["last_updated_epoch", "last_updated", "temp_c", "temp_f", "is_day", "condition"],
      "properties": {
        "last_updated_epoch": {
          "type": "integer",
          "description": "Local time when the data was updated as epoch (Unix timestamp)"
        },
        "last_updated": {
          "type": "string",
          "description": "Local date and time when the data was updated"
        },
        "temp_c": {
          "type": "number",
          "description": "Temperature in Celsius"
        },
        "temp_f": {
          "type": "number",
          "description": "Temperature in Fahrenheit"
        },
        "is_day": {
          "type": "integer",
          "description": "Whether it is daytime (1) or nighttime (0) at the location"
        },
        "condition": {
          "type": "object",
          "description": "Weather condition",
          "required": ["text", "icon", "code"],
          "properties": {
            "text": {
              "type": "string",
              "description": "Weather condition text"
            },
            "icon": {
              "type": "string",
              "description": "URL to weather condition icon"
            },
            "code": {
              "type": "integer",
              "description": "Weather condition code"
            }
          }
        },
        "wind_mph": {
          "type": "number",
          "description": "Wind speed in miles per hour"
        },
        "wind_kph": {
          "type": "number",
          "description": "Wind speed in kilometers per hour"
        },
        "wind_degree": {
          "type": "integer",
          "description": "Wind direction in degrees"
        },
        "wind_dir": {
          "type": "string",
          "description": "Wind direction as 16-point compass (e.g., 'N', 'SW')"
        },
        "pressure_mb": {
          "type": "number",
          "description": "Pressure in millibars"
        },
        "pressure_in": {
          "type": "number",
          "description": "Pressure in inches"
        },
        "precip_mm": {
          "type": "number",
          "description": "Precipitation amount in millimeters"
        },
        "precip_in": {
          "type": "number",
          "description": "Precipitation amount in inches"
        },
        "humidity": {
          "type": "integer",
          "description": "Humidity as percentage"
        },
        "cloud": {
          "type": "integer",
          "description": "Cloud cover as percentage"
        },
        "feelslike_c": {
          "type": "number",
          "description": "Feels like temperature in Celsius"
        },
        "feelslike_f": {
          "type": "number",
          "description": "Feels like temperature in Fahrenheit"
        },
        "vis_km": {
          "type": "number",
          "description": "Visibility in kilometers"
        },
        "vis_miles": {
          "type": "number",
          "description": "Visibility in miles"
        },
        "uv": {
          "type": "number",
          "description": "UV Index"
        },
        "gust_mph": {
          "type": "number",
          "description": "Wind gust in miles per hour"
        },
        "gust_kph": {
          "type": "number",
          "description": "Wind gust in kilometers per hour"
        }
      }
    },
    "forecast": {
      "type": "object",
      "description": "Weather forecast",
      "required": ["forecastday"],
      "properties": {
        "forecastday": {
          "type": "array",
          "description": "Array of forecast days",
          "items": {
            "type": "object",
            "required": ["date", "date_epoch", "day", "astro", "hour"],
            "properties": {
              "date": {
                "type": "string",
                "description": "Forecast date (yyyy-MM-dd)"
              },
              "date_epoch": {
                "type": "integer",
                "description": "Forecast date as epoch (Unix timestamp)"
              },
              "day": {
                "type": "object",
                "description": "Day forecast",
                "required": ["maxtemp_c", "maxtemp_f", "mintemp_c", "mintemp_f", "condition"],
                "properties": {
                  "maxtemp_c": {
                    "type": "number",
                    "description": "Maximum temperature in Celsius"
                  },
                  "maxtemp_f": {
                    "type": "number",
                    "description": "Maximum temperature in Fahrenheit"
                  },
                  "mintemp_c": {
                    "type": "number",
                    "description": "Minimum temperature in Celsius"
                  },
                  "mintemp_f": {
                    "type": "number",
                    "description": "Minimum temperature in Fahrenheit"
                  },
                  "avgtemp_c": {
                    "type": "number",
                    "description": "Average temperature in Celsius"
                  },
                  "avgtemp_f": {
                    "type": "number",
                    "description": "Average temperature in Fahrenheit"
                  },
                  "maxwind_mph": {
                    "type": "number",
                    "description": "Maximum wind speed in miles per hour"
                  },
                  "maxwind_kph": {
                    "type": "number",
                    "description": "Maximum wind speed in kilometers per hour"
                  },
                  "totalprecip_mm": {
                    "type": "number",
                    "description": "Total precipitation in millimeters"
                  },
                  "totalprecip_in": {
                    "type": "number",
                    "description": "Total precipitation in inches"
                  },
                  "totalsnow_cm": {
                    "type": "number",
                    "description": "Total snow in centimeters"
                  },
                  "avgvis_km": {
                    "type": "number",
                    "description": "Average visibility in kilometers"
                  },
                  "avgvis_miles": {
                    "type": "number",
                    "description": "Average visibility in miles"
                  },
                  "avghumidity": {
                    "type": "number",
                    "description": "Average humidity as percentage"
                  },
                  "daily_will_it_rain": {
                    "type": "integer",
                    "description": "Will it rain today (1 = yes, 0 = no)"
                  },
                  "daily_chance_of_rain": {
                    "type": "string",
                    "description": "Chance of rain as percentage"
                  },
                  "daily_will_it_snow": {
                    "type": "integer",
                    "description": "Will it snow today (1 = yes, 0 = no)"
                  },
                  "daily_chance_of_snow": {
                    "type": "string",
                    "description": "Chance of snow as percentage"
                  },
                  "condition": {
                    "type": "object",
                    "description": "Weather condition",
                    "required": ["text", "icon", "code"],
                    "properties": {
                      "text": {
                        "type": "string",
                        "description": "Weather condition text"
                      },
                      "icon": {
                        "type": "string",
                        "description": "URL to weather condition icon"
                      },
                      "code": {
                        "type": "integer",
                        "description": "Weather condition code"
                      }
                    }
                  },
                  "uv": {
                    "type": "number",
                    "description": "UV Index"
                  }
                }
              },
              "astro": {
                "type": "object",
                "description": "Astronomy information",
                "properties": {
                  "sunrise": {
                    "type": "string",
                    "description": "Sunrise time"
                  },
                  "sunset": {
                    "type": "string",
                    "description": "Sunset time"
                  },
                  "moonrise": {
                    "type": "string",
                    "description": "Moonrise time"
                  },
                  "moonset": {
                    "type": "string",
                    "description": "Moonset time"
                  },
                  "moon_phase": {
                    "type": "string",
                    "description": "Moon phase"
                  },
                  "moon_illumination": {
                    "type": "string",
                    "description": "Moon illumination as percentage"
                  }
                }
              },
              "hour": {
                "type": "array",
                "description": "Hourly forecast for the day",
                "items": {
                  "type": "object",
                  "properties": {
                    "time_epoch": {
                      "type": "integer",
                      "description": "Time as epoch (Unix timestamp)"
                    },
                    "time": {
                      "type": "string",
                      "description": "Time in yyyy-MM-dd HH:mm format"
                    },
                    "temp_c": {
                      "type": "number",
                      "description": "Temperature in Celsius"
                    },
                    "temp_f": {
                      "type": "number",
                      "description": "Temperature in Fahrenheit"
                    },
                    "is_day": {
                      "type": "integer",
                      "description": "Whether it is daytime (1) or nighttime (0)"
                    },
                    "condition": {
                      "type": "object",
                      "description": "Weather condition",
                      "properties": {
                        "text": {
                          "type": "string",
                          "description": "Weather condition text"
                        },
                        "icon": {
                          "type": "string",
                          "description": "URL to weather condition icon"
                        },
                        "code": {
                          "type": "integer",
                          "description": "Weather condition code"
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
